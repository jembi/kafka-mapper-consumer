{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["apps/kafka-mapper-consumer/src/*"],
      "test/*": ["apps/kafka-mapper-consumer/test/*"],
      "schema/*": ["apps/kafka-mapper-consumer/schema/*"]
    }
  }
}
